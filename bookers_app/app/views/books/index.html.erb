 <body>
<p id="notice"></p>
 <h1>Books</h1>
  <table>
      <thead>
          <tr>
           <th>Title</th>
           <th>Body</th>
           <th colspan = "3"></th>
          </tr>
      </thead>
    <today>
     <% @books.each do |book| %>
     <tr>
       <td><span><%= book.title %></span></td>
       <td><span><%= book.body %></span></td>
       <td><span><%= link_to "Show", book_path(book) %></span></td>
       <td><span><%= link_to "Edit", edit_book_path(book) %></span></td>
       <td><span><%= link_to "Destroy", destroy_book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></span></td>
      </tr>
     <% end %>
    </today>
 </table>

<h2>New book</h2>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post, local:true do |f| %>
<div class="filed">
  <label for="book_title">Title</label>
<br>
  <%= f.text_field :title %>
</div>
<div class="filed">
  <label for="book_title">Body</label>
  <br>
  <%= f.text_area :body %>
 </div>
  <%= f.submit 'Create Book' %>
<% end %>
</body>